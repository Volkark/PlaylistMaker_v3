<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    android:orientation="vertical">

    <Button style="@style/returnButtonStyle"
        android:id="@+id/return_from_media"
        android:text="@string/media"
        />

    <LinearLayout style="@style/settingsBlockStyle"
        android:layout_marginStart="@dimen/left_button_margin"
        android:layout_marginEnd="@dimen/right_button_margin"
        android:layout_marginTop="@dimen/middle_button_margin">
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="1) ys_display_bold"
            android:fontFamily="@font/ys_display_bold"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="2) ys_display_heavy"
            android:fontFamily="@font/ys_display_heavy"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="3) ys_display_light"
            android:fontFamily="@font/ys_display_light"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="4) ys_display_medium"
            android:fontFamily="@font/ys_display_medium"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="5) ys_display_regular"
            android:fontFamily="@font/ys_display_regular"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="6) ys_display_thin"
            android:fontFamily="@font/ys_display_thin"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="7) ys_text_bold"
            android:fontFamily="@font/ys_text_bold"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="8) ys_text_bold_italic"
            android:fontFamily="@font/ys_text_bold_italic"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="9) ys_text_light"
            android:fontFamily="@font/ys_text_light"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="10) ys_text_light_italic"
            android:fontFamily="@font/ys_text_light_italic"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="11) ys_text_medium"
            android:fontFamily="@font/ys_text_medium"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="12) ys_text_medium_italic"
            android:fontFamily="@font/ys_text_medium_italic"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="13) ys_text_regular"
            android:fontFamily="@font/ys_text_regular"
            />
        <TextView
            style="@style/fontFamilyTestStyle"
            android:text="14) ys_text_regular_italic"
            android:fontFamily="@font/ys_text_regular_italic"
            />
    </LinearLayout>
</LinearLayout>