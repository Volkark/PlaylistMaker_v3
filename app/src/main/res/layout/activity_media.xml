<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    android:orientation="vertical">

    <Button style="@style/returnButtonStyle"
        android:id="@+id/return_from_media"
        android:text="@string/media"
        />

    <LinearLayout style="@style/settingsBlockStyle"
        android:layout_marginStart="@dimen/left_button_margin"
        android:layout_marginEnd="@dimen/right_button_margin"
        android:layout_marginTop="@dimen/middle_button_margin">

        <ImageView
            android:id="@+id/image_inet"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracksList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>