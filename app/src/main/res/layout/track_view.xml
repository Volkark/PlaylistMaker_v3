<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/settings_margin">
    <ImageView
        android:id="@+id/artworkUrl100"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_sync_off"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView style = "@style/trackTextStyle"
            android:id="@+id/trackName"
            android:text="@string/composition"
        />

        <TextView style = "@style/trackTextStyle"
            android:id="@+id/artistAndTime"
            android:text="@string/artist_and_time"
            android:textColor="@color/settings_icon"
        />
    </LinearLayout>
</LinearLayout>
